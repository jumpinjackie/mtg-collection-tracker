<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:MtgCollectionTracker.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MtgCollectionTracker.Views.CardsView"
			 x:DataType="vm:CardsViewModel">
	<DockPanel>
		<StackPanel DockPanel.Dock="Top">
			<Grid ColumnDefinitions="*, 100">
				<TextBox Grid.Column="0" Text="{Binding SearchText}" Watermark="Search for cards...." />
				<Button Command="{Binding PerformSearchCommand}" IsEnabled="{Binding !IsBusy}" Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">Search</Button>
			</Grid>
			<ProgressBar IsIndeterminate="True" IsVisible="{Binding IsBusy}" />
		</StackPanel>
		<Button IsEnabled="{Binding HasSelectedCardSku}" Command="{Binding ViewCardSkuCommand}" Content="View Details" DockPanel.Dock="Bottom" HorizontalAlignment="Center" />
		<ListBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCardSku}" Background="Transparent" Margin="0 20">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
	</DockPanel>
</UserControl>